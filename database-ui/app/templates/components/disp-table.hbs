<style>
td,th {
    border: 1px solid black;
    font-size: 25px;
    align: center;
    min-width:70px;
}
table {
  border-collapse: collapse;
  padding: 15px;
  table-layout: auto;
  width: 180px;
}
</style>
<table id='table'>
    <thead id="tablehead">
      <tr>
        {{#each colData as |col|}}
        <th width = 5% {{action "sortBy" col}}>
          {{col}}
        </th>
        {{/each}}
      </tr>
    </thead>
    <tbody id= "tablebody">
      {{#each rowData as |row|}}
        <tr>
          {{#each colData as |col|}}
            <td>
             {{get row col}}
            </td>
          {{/each}}
        </tr>
      {{/each}}
    </tbody>
</table>
