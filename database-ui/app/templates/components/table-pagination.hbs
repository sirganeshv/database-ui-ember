<style>
  li {
     visibility: hidden;
     opacity: 0
  }
  button:focus{
      background-color: green;
      background: no-repeat top;
  }
  .container {
      width: 500px;
      margin: 0 auto;
  }
  .progress_outer {
      border: 1px solid #000;
      align-items: baseline;
  }
  .progress {
      width: 0%;
      background: #DEDEDE;
      height: 20px;
      margin-right: auto;
  }
  .centered-scrolling-wrapper {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    overflow-y: scroll;
  }

  .centered-scrolling-overlay {
    position: relative;
    height: auto;
    min-height: 100vh;
    padding: 1em;
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

